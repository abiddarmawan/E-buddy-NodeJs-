    <section class="login d-flex">
      <div class="login-left w-50 h-100">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-6">
            <div class="header">
              <h1>Welcome Back</h1>
              <p>Selamat datang jangan lupa isi data ya!</p>
            </div>
            <% if (success_msg.length > 0) { %>
              <div class="alert alert-success" role="alert">
                <ul>
                  <%= success_msg %>
                </ul>
              </div>
            <% } %>
            <% if (typeof errors !== 'undefined'){ %>
              <div class="alert alert-danger" role="alert">
                <ul>
                    <%errors.forEach(errors => { %>
                      <li><%= errors.msg %></li>
                    <% }) %>

                </ul>
                
              </div>
            <% } %> 

            <% if (typeof error !== 'undefined'){ %>
              <div class="alert alert-danger" role="alert">
                <ul>
                   <%=error%>

                </ul>
                
              </div>
            <% } %> 
            <form method="POST" action="/login">
             <div class="login-form">
            <!-- Login -->
          
              <label for="email" class="form-label">Email</label>
              <input  name="email" type="email" class="form-control" id="email" placeholder="Masukan Email">

            <!-- password -->
              <label for="password" class="form-label">Password</label>
              <input name="password" type="password" class="form-control" id="email" placeholder="Masukan Password">
              <!-- Button -->
              <div class="container text-center">
                  <button class="btn btn-primary ml-2 ">Masuk</button>
              </div>
            </form>
              <div class="text-center"> 
                    <span class="d-inline ">Belum punya akun? <a href= "/register" class="signup d-inline text-decoration-none">Ayo bikin akun</a></span>
              </div>

            </div>
          </div>
        </div>  
      </div>

      <div class = "login-right bg-primary w-50 h-100">
        <img src= "gambar/login.jpg"  alt="">
      </div>
  </section>

