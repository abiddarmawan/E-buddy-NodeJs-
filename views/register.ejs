      <section class="login d-flex">
          <div class="login-left w-100 h-100">
            <div class="row justify-content-center align-items-center h-100">
              <div class="col-6">
                <div class="header">
                  <h1>Selamat Datang</h1>
                  <p>Isi data dulu ya! jangan sampe ketinggalan ya</p>

                  <% if (typeof errors !== 'undefined'){ %>
                    <div class="alert alert-danger" role="alert">
                      <ul>
                          <%errors.forEach(error => { %>
                            <li><%= error.msg %></li>
                          <% }) %>
  
                      </ul>
                      
                    </div>
                  <% } %> 
                </div>
                <form method="POST" action="/register">
                <div class="registration-form">

                  <!-- nama -->
                  <label for="nama">Nama Lengkap</label>
                  <input  name= "fullname" type="nama" class="form-control" id="nama" placeholder="Nama Lengkap">
                  <!-- Login -->
                  <label for="email" class="form-label">Email</label>
                  <input name= "email" type="email" class="form-control" id="email" placeholder="Masukan Email">
  
                  <!-- password -->
                  <label for="password" class="form-label">Password</label>
                  <input name= "password" type="password" class="form-control" id="email" placeholder="Masukan Password">
                  
                  <!-- Re Enter password-->
                  <label for="password" class="form-label">Masukan ulang password</label>
                  <input name= "checkpassword" type="password" class="form-control" id="email" placeholder="Masukan ulang Password">

                  <!-- Button -->
                  <div class="text-center">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" >
                    <label class="form-check-label" for="invalidCheck">
                      Agree to terms and conditions
                    </label>
                  </div>
                  <div class="text-center">
                    <button type= "submit" >Sign Up</button>
                  </div>

                  <div class="text-center">
                    <span class="d-inline">Sudah punya akun? <a href="#" class="d-inline text-decoration-none">Log in</a></span>
                  </div>
                </form>
                    
                </div>
              </div>
            </div>  
          </div>
  
          <div class = "login-right bg-dark w-100 h-100">
            <img src="gambar/black.jpg" alt="">
          </div>
