                        <!--  button Hitung -->
                        <div class="text-center">
                            <button class="tambah">Tambah</button>
                        </div>
                        <% if (typeof hasil !== 'undefined' ) { %>  
                          <div class="alert alert-dark" role="alert">
                              <% let angka = hasil.toFixed(2)%>
        
                              <%= angka %>  
                          </div>
                          <%}%>
                    </div>
                  </form>
                </div>
            </div>
          </div>
