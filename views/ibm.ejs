                    </div>
                    <form method="POST" action="/imb?_method=PUT">
                    <div class="isian-ibm">
                        <input type="hidden" name="id" value="<%=id %>" />
                        
                        <!--Berat Badan -->
                        <label for="berat">Masukan Berat Badan</label>
                        <input name = "beratbadan" type="number" min="1" max="1000" class="form-control" id="berat" placeholder="Berat Badan">
            
