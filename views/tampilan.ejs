            <div class="card-body mt-5">
                <h5 class="card-title">Berat Badan</h5>
           
                <h6 class="card-subtitle mt-2 text-muted"></h6>
                <p>Nama : <%= nama %> </p>
                <div class="card-text">
                  <p class="mt-2"> Index Massa Tubuh : </p>
                  <% if (!berat) {%>
                      <p>Belum menambahkan Berat badan</p> 
                  <%}else{%>
                        <%if (berat < 17){%>
                           <p class="card-text"><%= berat %></p>
                            <p> Sangat kurus</p> 
                        <%}else if(berat > 17.0 && berat <= 18.5){%>
                            <p class="card-text"><%= berat %></p>
                            <p>Kurus</p> 
                        <%}else if(berat > 18.5 && berat <= 25.0){%>
                              <p class="card-text"><%= berat %></p>
                              <p>Nomal</p> 
                       <%}else if(berat > 25.0 && berat <= 27.0){%>
                             <p class="card-text"><%= berat %></p>
                             <p>Overweight</p> 
                        <%}else if(berat > 25.0 && berat <= 27.0){%>
                          <p class="card-text"><%= berat %></p>
                             <p>Obesitas</p> 
                        <%}%>
                  <% } %>
                </div>
                <a href="/masatubuh/edit/<%=id%>" class="btn btn-info btn-lg badge mt-3">edit</a>
                <form method="POST" action="/berat?_method=DELETE" class="d-inline" >
                   <input type="hidden" name="id" value="<%= id %>">
                         <button type="submit" class="btn-danger badge btn-sm">Delete</button>
                </form>
            </div>
